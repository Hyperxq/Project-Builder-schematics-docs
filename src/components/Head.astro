---
import type { Props } from "@astrojs/starlight/props";
import Default from "@astrojs/starlight/components/Head.astro";

// Get the URL of the generated image for the current page using its
// ID and replace the file extension with `.png`.
const ogImageUrl = new URL(
  `/open-graph/${Astro.props.id.replace(/\.\w+$/, ".png")}`,
  Astro.site
);
const imageSrc = ogImageUrl ?? "/default-og-image.png";
const canonicalImageSrc = new URL(imageSrc, Astro.site);
---

<meta name="title" content="Schematics Documentation" />
<meta
  name="keywords"
  content="angular schematics documentation, schematics documentation, how to use angular schematics, how to create custom angular schematics, Angular Schematics, Schematics Javascript, Schematics Tutorial, Schematics for Angular Developers, Javascript Schematics Guide, Schematics Library, Schematics Development, How to use Schematics with Angular, Schematics Javascript Integration, Learning Schematics for Web Development, Advanced Schematics Documentation, Building Projects with Schematics"
/>

<link rel="icon" href="/favicon.ico" type="image/x-icon" />
<meta property="og:type" content="website" />
<meta
  name="google-site-verification"
  content="VNGRRJfTbHp-GNL0Lc1cZMwm7g0WvektnZADgZYPszk"
/>

<!-- Render the default <Head/> component. -->
<Default {...Astro.props}><slot /></Default>

<!-- Render the <meta/> tags for the Open Graph images -->
<meta property="og:image" content={canonicalImageSrc} />
<meta name="twitter:image" content={canonicalImageSrc} />
